<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="action-form">
    <div class="input-field">
        <input  id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course's name</label>
        <span class="helper-text" data-error="Type name"></span>
    </div>

    <div class="input-field">
        <input  id="price" name="price" type="number" class="validate" required value="{{course.price}}">
        <label for="prise">Course's prise</label>
        <span class="helper-text" data-error="Type price"></span>

    </div>

    <div class="input-field">
        <input  id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Url img</label>
        <span class="helper-text" data-error="Type url of img"></span>

    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Edit course</button>
</form>
<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn red">Delete course</button>
</form>